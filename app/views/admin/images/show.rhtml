<h1>Image Info</h1>
<%= @image.description %><br/>
<%= link_to(image_tag(@image.public_filename(:thumb_big)),@image.public_filename, :target=>"_blank") %>
<br/>
  <% if @image.user == current_user %>
  <%= link_to 'EDIT', admin_edit_image_path(@image) %> |
  <%= link_to 'DESTROY', admin_image_path(@image), :method => :delete, :confirm => 'Are you sure?' %>
<% end %> 


