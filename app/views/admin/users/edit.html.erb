<h1>Editing user</h1>

<%= error_messages_for :user %>

<% form_for(:user, :url => admin_user_path(@user.id), :html=>{:method=>:put}) do |f| %>
 <table id="users" class="form">
  <%= render :partial => 'form', :locals => { :f => f } %>
  </table>
  <div id="changed_password" style="display:none;width:500px;">
    <%=link_to_function "X", "$('changed_password').style.display='none';", :id=>"close"%>
  <table class="form" >
  <tr>
    <td><label for="user_password">Password:</lable></td>
    <td><%= f.password_field :password, :size=>50 %></td>
  </tr>
  <tr>
   <td><label for="user_password_confirmation">Password confirmation:</lable></td>
   <td><%= f.password_field :password_confirmation, :size=>50 %></td>
  </tr>
  </table>
  </div>
  <span id="required">*</span>-Required <br/>
  <%= f.submit "Update" %>
<% end %>

<%= link_to 'Show', admin_user_path(@user) %> |
<%= link_to 'Back', admin_users_path %>
