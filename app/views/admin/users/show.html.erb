<%@person = @user.person%>
<h1>General User Info</h1>
<table id="users" class="obj_list">
  <tr>
    <td><b>Username</b></td>
    <td><%=@user.login%></td>
  </tr>
  <tr>
    <td><b>E-mail</b></td>
    <td><%=mail_to @user.email%></td>
  </tr>
  <tr>
     <td><b>Type</b></td>
     <td><%=@user.type%></td>
 </tr>
  <tr>
     <td><b>Created at</b></td>
     <td><%=@user.created_at.strftime("%d.%m.%Y")%></td> 
  </tr>
  <tr>
     <td colspan="2"><h4>Personal Information</h4></td>
  </tr>
  <%= render :partial => 'persons/full_show'%>

  <tr>
  <td colspan="2" align="center"><%= link_to 'Show', admin_user_path(@user) %> |
        <%= link_to 'Edit', admin_edit_user_path(@user) %> |
        <%= link_to 'Destroy', admin_user_path(@user) , :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
</table>

