<% content_for :title do %>Step 4 - Payment Details<% end %>
<% content_for :breadcrumbing_area do%>
<h1>Team Registration > Step 4 - Payment Details</h1>
<%end%>
<% content_for :submenu_area do%>
  <div id="submenu_section">
    <%=javascript_tag "document.getElementById('content').style.background='#F7941D';"%>
     <%= render :partial => 'partials/order_step_list', :locals =>{:s1=>"previous", :s2=>"previous", :s3=>"previous", :s4=>"current", :s5=>"next", :s6=>"next"} %>
  </div>
<%end%>
<% content_for  :current_page_name do%>
  Payment Details
<%end%>
<!-- This is a snippet being edited by admin. Snippet Name "Registration Instructions" -->
  <%= render :comatose=>'step4-instructions', :silent=>true %>
<!-- -->
  
  <h2>Boat: <%=@team.human_name%></h2> 
  <fieldset>
    <legend>Step 4 - Payment Details</legend>
    <%= error_messages_for :order, :credit_card, :person, :billing %>
    
    <% form_for :order, @order, :url => {:action => "confirm_order"} do |f| %>
    
    <% content_tag :fieldset do %> 
    <%= content_tag :legend, "Your Personal Information" %>
    <% fields_for :person, @person do |p| %>
    <p class="required">
      <label for="person_first_name">First Name</label>:<span id="required">*</span><br/><%= p.text_field :first_name %> 
    </p>
    <p class="required">
      <label for="person_last_name">Last Name</label>:<span id="required">*</span><br/><%= p.text_field :last_name %> 
    </p>
    <p class="required">
      <label for="person_email">Email Address</label>:<span id="required">*</span><br/><%= p.text_field :email %>
    </p>
    <p class="required">
      <label for="person_phone">Home Phone number</label>:<span id="required">*</span><br/><%= p.text_field :phone %>
    </p> 
    <% end %>
   <% end %>
   
   <% content_tag :fieldset do %> 
   <%= content_tag :legend, "Credit Card" %>
    <% fields_for :credit_card, @credit_card do |cc| %>
    <p class="required">
      <label for="credit_card_type">Type</label>:<span id="required">*</span><br/><%= cc.select :type, Order::CARD_TYPES.map { |t| t} %>
    </p>
    <p class="required">
      <label for="credit_card_first_name">First Name</label>:<span id="required">*</span><br/> <%= cc.text_field :first_name %>
    </p>
    <p class="required">
      <label for="credit_card_last_name">Last Name</label>:<span id="required">*</span><br/><%= cc.text_field :last_name %>
    </p>
    <p class="required">
      <label for="credit_card_number">Card Number</label>:<span id="required">*</span><br/><%= cc.text_field :number %></p>
    <p class="required">
      <label for="credit_card_month">Expiration Date Month / Year</label>:<span id="required">*</span><br/>
      <%= cc.select :month, (1..12) %> <%= cc.select :year, (Time.now.year...(Time.now.year + 10)) %>
    </p>
    <p class="required">
      <label for="credit_card_month">Card Verification Number</label>:<span id="required">*</span><br/> <%= cc.text_field :verification_value, :label => "CVV2", :size=>5 %>
       </p>     
       <% end %>
       <% end %>
       
       <% content_tag :fieldset do %> 
       <%= content_tag :legend, "Billing Address" %>
       <p><%=check_box_tag "use_personal_address", "1",params[:use_personal_address], :onclick=>"$('billing_address').toggle();" %>the same as personal address</p>

       <%= render :partial => 'billing_form' %>
       <% end %>
   
   
   <%= f.submit "Continue Checkout..." %>
  
<% end %>
</fieldset>
