 <% if logged_in? %>
        Logged as <b><%= current_user.login %></b> &nbsp;|&nbsp;
        <%unless current_user.is_admin?%>
        <%= link_to "My Account",current_user.is_member? ?  team_user_path(current_user.member.team.name.to_slug) : member_user_path %> &nbsp;|&nbsp;
        <%if current_user.tickets.find_pending(:first)%>
        <%= link_to "Support", :controller=>"member/support", :action=>"index"%> &nbsp;|&nbsp; 
        <%end%>
        
        <%else%>
         <%= link_to "My Account",admin_user_path(current_user)%> &nbsp;|&nbsp;
        <%end%>
        <%= link_to "logout", logout_url %>
        <br/>
   <%else%>
       <%= link_to "login", login_url %>
  <%end%>     